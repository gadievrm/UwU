<Window x:Class="t_project.Views.Windows.EditModelTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:t_project.Views.Windows"
        mc:Ignorable="d"
        Title="Редактирование модели оборудования"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Редактирование модели оборудования"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#0060AC"
                   HorizontalAlignment="Center"/>

        <!-- Основные поля -->
        <Border Grid.Row="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="15" Margin="0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ID (только для чтения) -->
                <TextBlock Text="ID:" Grid.Row="0" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBlock Text="{Binding Model.Id}" Grid.Row="0" Grid.Column="1"
                           VerticalAlignment="Center" Margin="0,0,0,5"/>

                <!-- Наименование -->
                <TextBlock Text="Наименование*:" Grid.Row="1" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,10,5"/>
                <TextBox Text="{Binding Model.Name, UpdateSourceTrigger=PropertyChanged}" 
                         Grid.Row="1" Grid.Column="1" Height="25" Margin="0,0,0,5"/>

                <!-- Тип оборудования -->
                <TextBlock Text="Тип оборудования:" Grid.Row="2" Grid.Column="0"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox x:Name="TypeComboBox" Grid.Row="2" Grid.Column="1"
                          DisplayMemberPath="NameType"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding Model.TypeId}"
                          Height="25"/>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Сохранить" Width="120" Height="35"
                    Click="SaveButton_Click"
                    Background="#0060AC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"/>

            <Button Content="Отмена" Width="120" Height="35"
                    Click="CancelButton_Click"
                    Background="LightGray"
                    Foreground="Black"
                    FontWeight="Bold"
                    BorderThickness="0"
                    Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>