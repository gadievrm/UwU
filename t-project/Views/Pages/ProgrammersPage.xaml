<Page x:Class="t_project.Views.Pages.ProgrammersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="650"
      Title="ProgrammersPage">

    <Border CornerRadius="10" Padding="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <TextBlock Text="Список программистов"
                       Style="{StaticResource PageHeaderStyle}"/>

            <!-- Панель управления -->
            <StackPanel Grid.Row="1" Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,10">
                <Button Content="Добавить"
                        Style="{StaticResource MenuButtonStyle}"
                        Click="AddNewRowButton_Click"/>

                <TextBox x:Name="SearchTextBox"
                         Style="{StaticResource SearchTextBoxStyle}"
                         TextChanged="SearchTextBox_TextChanged"/>
            </StackPanel>

            <!-- Таблица с контекстным меню -->
            <DataGrid x:Name="ProgrammersGrid"
                      Grid.Row="2"
                      Style="{StaticResource StandardDataGridStyle}"
                      ItemsSource="{Binding ProgrammersItems}"
                      CellEditEnding="ProgrammersGrid_CellEditEnding"
                      BeginningEdit="ProgrammersGrid_BeginningEdit">

                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Редактировать" Click="EditMenuItem_Click"/>
                        <MenuItem Header="Удалить" Click="DeleteMenuItem_Click"/>
                    </ContextMenu>
                </DataGrid.ContextMenu>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="1*" IsReadOnly="True"/>
                    <DataGridTextColumn Header="Имя программиста" Binding="{Binding Name}" Width="3*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>